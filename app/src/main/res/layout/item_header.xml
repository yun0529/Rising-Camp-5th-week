<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_banner_ads"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/banner_ads"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"/>

    <TextView
        android:id="@+id/tv_header_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20211227"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_banner_ads"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:alpha="0.7"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tv_header_comma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=", "
        app:layout_constraintTop_toTopOf="@id/tv_header_date"
        app:layout_constraintStart_toEndOf="@id/tv_header_date"
        android:alpha="0.7"/>

    <TextView
        android:id="@+id/tv_header_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="130개"
        app:layout_constraintTop_toTopOf="@id/tv_header_comma"
        app:layout_constraintStart_toEndOf="@id/tv_header_comma"
        android:alpha="0.7"/>

    <TextView
        android:id="@+id/tv_header_comma2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=", "
        app:layout_constraintTop_toTopOf="@id/tv_header_count"
        app:layout_constraintStart_toEndOf="@id/tv_header_count"
        android:alpha="0.7"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1인평균 편도요금"
        app:layout_constraintTop_toTopOf="@id/tv_header_comma2"
        app:layout_constraintStart_toEndOf="@id/tv_header_comma2"
        android:alpha="0.7"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/black"
        android:alpha="0.05"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toBottomOf="@id/tv_header_date"
        android:layout_marginTop="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>