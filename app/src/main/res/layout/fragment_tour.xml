<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".testModel.TourFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.045"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/ll_trip_tool">

        <ImageButton
            android:id="@+id/ib_tour_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_icon"
            android:background="#00000000"
            android:layout_gravity="center_vertical"
            android:scaleX="1.1"
            android:scaleY="1.1"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>


        <ImageButton
            android:id="@+id/ib_swap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/swap_icon"
            android:background="#00000000"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="15dp"
            android:scaleX="1"/>

        <ImageButton
            android:id="@+id/ib_user_navi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/user_navi_icon"
            android:background="#00000000"
            android:layout_gravity="center_vertical"
            android:scaleY="0.95"
            android:scaleX="1.2"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>