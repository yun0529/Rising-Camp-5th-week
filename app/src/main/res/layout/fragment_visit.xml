<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".visitFragment">

    <LinearLayout
        android:id="@+id/ll_tour_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_icon"
            android:background="#00000000"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제주 관광"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginStart="15dp"
            android:drawableEnd="@drawable/close_icon_nukki_reverse_small_size"
            android:drawablePadding="5dp"
            android:layout_gravity="center_vertical"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/search_icon"
            android:background="#00000000"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center_vertical"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/map_icon"
            android:background="#00000000"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/hs_tour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ll_tour_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="전 지역"
                android:paddingEnd="10dp"
                android:textColor="#6084F2"
                android:drawablePadding="-20dp"
                android:drawableEnd="@drawable/filter_nukki"
                android:background="@drawable/button_stroke_blue"
                android:layout_marginStart="20dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="추천순"
                android:paddingEnd="10dp"
                android:textColor="#6084F2"
                android:drawablePadding="-20dp"
                android:drawableEnd="@drawable/filter_nukki"
                android:background="@drawable/button_stroke_blue"
                android:layout_marginStart="5dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:text="영업중"
                android:textColor="#DEDDDC"
                android:background="@drawable/button_stroke"
                android:layout_marginStart="5dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:text="예약가능"
                android:textColor="#DEDDDC"
                android:background="@drawable/button_stroke"
                android:layout_marginStart="5dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:drawableStart="@drawable/main_tour_icon"
                android:text="관광명소"
                android:drawablePadding="-10dp"
                android:paddingStart="10dp"
                android:textColor="#DEDDDC"
                android:background="@drawable/button_stroke"
                android:layout_marginStart="5dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:drawableStart="@drawable/theme_todo_icon"
                android:text="태마/체험"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:textColor="#DEDDDC"
                android:background="@drawable/button_stroke"
                android:layout_marginStart="5dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:drawableStart="@drawable/shopping_icon"
                android:text="쇼핑"
                android:drawablePadding="-10dp"
                android:paddingStart="10dp"
                android:textColor="#DEDDDC"
                android:background="@drawable/button_stroke"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="15dp"/>

        </LinearLayout>
    </HorizontalScrollView>

    <View
        android:id="@+id/gl_tour1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hs_tour"
        android:background="@color/black"
        android:layout_marginTop="15dp"
        android:alpha="0.05"/>

    <ListView
        android:id="@+id/lv_tour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/gl_tour1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:dividerHeight="1.5dp"
        android:divider="#F0F0F0"/>


</androidx.constraintlayout.widget.ConstraintLayout>