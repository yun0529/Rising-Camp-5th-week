<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_height="230dp"
        android:layout_width="match_parent">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:toolbarId="@+id/toolbar"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="?attr/colorPrimary">


            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_height="?attr/actionBarSize"
                android:layout_width="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginStart="15dp">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/close_x_icon_white"
                        android:background="#00000000"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:id="@+id/tv_city_home_where"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"/>

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/search_icon_white"
                        android:background="#00000000"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="15dp"/>

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/map_icon_white"
                        android:background="#00000000"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="15dp"/>

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/user_navi_icon_white"
                        android:background="#00000000"
                        android:scaleX="1.2"
                        android:scaleY="0.95"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="15dp"/>
                </LinearLayout>

            </androidx.appcompat.widget.Toolbar>

            <TextView
                android:id="@+id/tv_city_home_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="제주"
                android:textSize="28sp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="55dp"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 여행"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:layout_marginTop="55dp"
                android:layout_marginStart="67dp"
                android:drawableEnd="@drawable/city_select_icon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:text="     2021.12.25 - 12.26     "
                android:textColor="@color/white"
                android:textSize="14sp"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:layout_marginStart="15sp"
                android:layout_marginTop="100sp"
                android:background="@drawable/plan_reserve"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:text="    일정 등록 +    "
                android:textColor="@color/white"
                android:textSize="14sp"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:layout_marginStart="180sp"
                android:layout_marginTop="100sp"
                android:background="@drawable/plan_reserve"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="@color/black"
                android:layout_marginTop="170dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:alpha="0.05"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="bottom"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="가이드"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_marginStart="15dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="항공"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_marginStart="30dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="숙소"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_marginStart="30dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"/>
                    <TextView
                        android:id="@+id/tv_city_home_tour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="관광"
                        android:clickable="true"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_marginStart="30dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="맛집"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_marginStart="30dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="혜택"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_marginStart="30dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="투어ㆍ티켓"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_marginStart="30dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="라운지"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_marginStart="30dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="15dp"/>


                </LinearLayout>

            </HorizontalScrollView>




        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFFFF"
            tools:context=".CityHomeFragment">

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>